<?xml version="1.0"?>
<robot name="manipulator">
    <material name="grey">
        <color rgba="0.7 0.7 0.7 1" />
    </material>

    <material name="green">
        <color rgba="0 0.6 0 1" />
    </material>

    <material name="blue">
        <color rgba="1 1 1 1" />
    </material>

  <link name="base">
    <visual>
      <geometry>
        <cylinder radius="0.8" length="0.2"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="green" />
    </visual>
  </link>

  <link name="shoulder">
    <visual>
      <geometry>
        <cylinder radius="0.4" length="0.8"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 1.5708"/>
      <material name="grey" />
    </visual>
  </link>

  <link name="wrist">
    <visual>
      <geometry>
        <cylinder radius="0.4" length="0.8"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 1.5708"/>
      <material name="blue" />
    </visual>
  </link>

  <joint name="base_to_shoulder" type="revolute">
    <parent link="base"/>
    <child link="shoulder"/>
    <origin xyz="0 0 0.10" rpy="0 0 0"/> 
    <axis xyz="0 0 1"/>
    <limit effort="50" velocity="1.0" lower="-3.14" upper="3.14"/>
  </joint>

  <joint name="shoulder_to_wrist" type="revolute">
    <parent link="shoulder"/>
    <child link="wrist"/>
    <origin xyz="0 0 0.80" rpy="0 0 0"/> 
    <axis xyz="0 1 0"/>
    <limit effort="50" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

</robot>