<?xml version="1.0"?>

<robot name="rover">
    <material name="grey">
        <color rgba="0.7 0.7 0.7 1" />
    </material>

    <material name="green">
        <color rgba="0 0.6 0 1" />
    </material>

    <material name="blue">
        <color rgba="1 1 1 1" />
    </material>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.6 0.4 0.2" />
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
            <material name="green" />
        </visual>
    </link>

    <link name="lidar">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <origin xyz="0 0 0.025" rpy="0 0 0" />
            <material name="blue" />
        </visual>
    </link>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <origin xyz="0 0 0.025" rpy="0 0 0" />
            <material name="blue" />
        </visual>
    </link>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <origin xyz="0 0 -0.025" rpy="0 0 0" />
            <material name="blue" />
        </visual>
    </link>

    <link name="castor">
        <visual>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
            <origin xyz="0.2 0 0" rpy="0 0 0" />
            <material name="blue" />
        </visual>
    </link>

    <link name="base_footprint">
    </link>

    <joint name="base_lidar_joint" type="fixed">
        <parent link="base_link" />
        <child link="lidar" />
        <origin xyz="0 0 0.2" rpy="0 0 0" />
    </joint>

    <joint name="base_left_wheel" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel" />
        <origin xyz="0 0.2 0" rpy="1.57 0 0" />
        <axis xyz="1 0 0" />
    </joint>

    <joint name="base_right_wheel" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel" />
        <origin xyz="0 -0.2 0" rpy="1.57 0 0" />
        <axis xyz="1 0 0" />
    </joint>

    <joint name="base_link_castor" type="fixed">
        <parent link="base_link" />
        <child link="castor" />
        <axis xyz="0.15 0 0" rpy="0 0 0" />
    </joint>

    <joint name="base_footprint_base_link" type="fixed">
        <parent link="base_footprint" />
        <child link="base_link" />
        <axis xyz="0 0 0.1" rpy="0 0 0" />
    </joint>
</robot>